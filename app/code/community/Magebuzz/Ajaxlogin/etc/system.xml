<?xml version="1.0"?>
<config>
  <tabs>
    <magebuzz translate="label">
      <label>MAGEBUZZ ADD-ONS</label>
      <sort_order>400</sort_order>
    </magebuzz>
  </tabs>
  <sections>
    <ajaxlogin translate="label" module="ajaxlogin">
      <label>Ajax Login</label>
      <tab>magebuzz</tab>
      <frontend_type>text</frontend_type>
      <sort_order>299</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <general translate="label" module="ajaxlogin">
          <label>General Settings</label>
          <frontend_type>text</frontend_type>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <sort_order>0</sort_order>
          <fields>
            <enable_loginpopup translate="label">
              <label>Enable Login Popup</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>0</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </enable_loginpopup>  
						<include_js translate="label comment">
							<label>Include jQuery</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[Turn off jquery library if you already include it from another module]]></comment>
						</include_js>  
            <enable_showhomepage translate="label">
              <label>Show Popup on Home Page</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>4</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </enable_showhomepage>
          </fields> 
        </general>
      </groups>
      <groups>
        <registration_form translate="label" module="ajaxlogin">
          <label>Registration Form</label>
          <frontend_type>text</frontend_type>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <sort_order>1</sort_order>
          <fields>
            <show_newsletter_subscription translate="label">
              <label>Show Newsletter Subscription</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>5</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </show_newsletter_subscription>
            <show_terms_and_conditions translate="label">
              <label>Show Terms and Conditions</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>6</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </show_terms_and_conditions>                      
          </fields> 
        </registration_form>
      </groups>
    </ajaxlogin>
  </sections>
</config>